{
  "name": "{{ packageName }}",
  "version": "0.1.0",
  "main": "./src/index.js",
  "devDependencies": {
    "@rispa/babel": "*",
    "@rispa/eslint-config": ">=3.0.0"
  },
  "dependencies": {
    "@rispa/redux": "*",
    "react-loadable": "5.x.x",
    "react": "15.x.x",
    "react-dom": "15.x.x",
    "prop-types": "15.x.x"
  },
  "scripts": {
    "lint": "rispa-eslint .",
    "lint:fix": "rispa-eslint . --fix",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "^.+\\.sss$": "<rootDir>/src/__mocks__/stylesMock.js"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@rispa))"
    ],
    "collectCoverageFrom": [
      "src/redux/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
